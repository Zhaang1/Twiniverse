<!-- 默认状态下是深色描边，看起来不可编辑；获取焦点后变色 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 激活/可编辑状态：背景深灰，描边蓝 -->
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#1F1F1F"/>
            <stroke android:width="2dp" android:color="#2B6EF6"/>
            <corners android:radius="14dp"/>
        </shape>
    </item>
    <!-- 激活状态但未聚焦 -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#1F1F1F"/>
            <stroke android:width="1dp" android:color="#9E9E9E"/>
            <corners android:radius="14dp"/>
        </shape>
    </item>
    <!-- 默认/禁用状态：背景与大背景融合或微弱区分，深灰描边 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0F1115"/>
            <stroke android:width="1dp" android:color="#1F1F1F"/>
            <corners android:radius="14dp"/>
        </shape>
    </item>
</selector>